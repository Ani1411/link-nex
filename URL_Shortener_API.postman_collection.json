{
	"info": {
		"name": "URL Shortener API",
		"description": "Collection for URL Shortener API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			},
			"response": []
		},
		{
			"name": "Root",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": ["{{base_url}}"],
					"path": [""]
				}
			},
			"response": []
		},
		{
			"name": "Create Short URL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"original_url\": \"https://www.example.com\",\n  \"custom_alias\": \"example\",\n  \"expires_in_days\": 30\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/urls/create",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "urls", "create"]
				}
			},
			"response": []
		},
		{
			"name": "Create Short URL (Auto-generated)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"original_url\": \"https://www.google.com\",\n  \"expires_in_days\": 7\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/urls/create",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "urls", "create"]
				}
			},
			"response": []
		},
		{
			"name": "List URLs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/urls/list?page=1&limit=10",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "urls", "list"],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "limit",
							"value": "10"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete URL by Short Code",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/urls/delete?short_code=example",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "urls", "delete"],
					"query": [
						{
							"key": "short_code",
							"value": "example"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete URL by Long URL",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/urls/delete?long_url=https://www.example.com",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "urls", "delete"],
					"query": [
						{
							"key": "long_url",
							"value": "https://www.example.com"
						}
					]
				}
			},
			"response": []
		}
	]
}